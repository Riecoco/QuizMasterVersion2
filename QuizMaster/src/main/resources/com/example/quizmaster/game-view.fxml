<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.quizmaster.GameController">
    <top>
        <VBox fx:id="progressBarBox" alignment="CENTER" visible="false">
            <ProgressBar id="progressBar" fx:id="progressBar" prefHeight="30.0" prefWidth="350.0" progress="1.0" BorderPane.alignment="CENTER">
                <BorderPane.margin>
                    <Insets top="50.0" />
                </BorderPane.margin>
            </ProgressBar>
         <BorderPane.margin>
            <Insets top="50.0" />
         </BorderPane.margin>
        </VBox>
    </top>
   <center>
       <VBox alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
           <VBox id="nameForm" fx:id="nameForm" alignment="CENTER" fillWidth="false" prefHeight="98.0" prefWidth="279.0" spacing="5.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                   <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </VBox.margin>
               <padding>
                   <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <Label text="Enter your name:" />
               <TextField fx:id="playerName" promptText="your name goes here" />
               <Button mnemonicParsing="false" onAction="#onEnterNameButtonClick" text="Submit" />
           </VBox>
           <VBox fx:id="quizViewBodyBox" alignment="TOP_CENTER" prefHeight="278.0" prefWidth="400.0" spacing="20.0" visible="false" VBox.vgrow="ALWAYS">
               <padding>
                   <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
               <GridPane fx:id="quizHeader" prefHeight="40.0" prefWidth="345.0">
                   <columnConstraints>
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="235.0" minWidth="10.0" prefWidth="235.0" />
                       <ColumnConstraints hgrow="SOMETIMES" maxWidth="168.0" minWidth="10.0" prefWidth="111.0" />
                   </columnConstraints>
                   <rowConstraints>
                       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                   </rowConstraints>
                   <Label fx:id="quizName" text="Label">
                       <GridPane.margin>
                           <Insets />
                       </GridPane.margin>
                       <font>
                           <Font size="18.0" />
                       </font>
                   </Label>
                   <Label fx:id="quizTime" alignment="CENTER_RIGHT" text="Label" GridPane.columnIndex="1" GridPane.halignment="RIGHT">
                       <opaqueInsets>
                           <Insets />
                       </opaqueInsets>
                       <GridPane.margin>
                           <Insets />
                       </GridPane.margin>
                   </Label>
               </GridPane>
               <Label fx:id="questionTitle" prefHeight="42.0" prefWidth="371.0" text="Label" GridPane.columnSpan="2">
                   <font>
                       <Font size="14.0" />
                   </font>
               </Label>
            <VBox fx:id="quizOptions" alignment="TOP_CENTER" prefHeight="200.0" prefWidth="100.0">
               <VBox.margin>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </VBox.margin>
            </VBox>
           </VBox>
       </VBox>
   </center>
</BorderPane>
